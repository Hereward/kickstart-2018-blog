{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "lib": [ "es6", "es2017", "dom" ]
    },
    "include": [
        "client/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        ".meteor"
    ]
}

